const excelJS = require("exceljs");

  // Cria planilha
  const worksheets = (workbook, wheader, wresult, wname) => {
    
    const worksheet = workbook.addWorksheet(wname);
    const array = [];
    
    // CabeÃ§alho da planilha
    for(element of wheader){
      const registro = {};
      registro.header = element;
      registro.key = element;
      registro.width = 10;
      array.push(registro);
    };

    worksheet.columns = array;

    // Dados da planilha
    for(resultLinha of wresult){
      const array = Object.values(resultLinha);
      worksheet.addRow(array);
    };

    // Primeira linha negrito
    worksheet.getRow(1).eachCell((cell) => {
      cell.font = { bold: true };
    });
  };
  module.exports = worksheets;